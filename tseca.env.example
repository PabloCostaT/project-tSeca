# ============================= CONFIGURAÇÕES DO SERVIDOR =============================
NODE_ENV=production
PORT=3030
HOST=0.0.0.0

# ============================= CONFIGURAÇÕES DO ESP8266 =============================
ESP_URL=http://192.168.15.14
API_TOKEN=123456
ESP_DEVICE_ID=esp001

# ============================= CONFIGURAÇÕES DA VPS =============================
VPS_BASE_URL=https://sua-vps.com
VPS_API_TOKEN=seu_token_secreto_muito_seguro
HEARTBEAT_INTERVAL_MS=30000
COMMAND_POLL_INTERVAL_MS=10000

# ============================= CONFIGURAÇÕES MQTT =============================
MQTT_HOST=mqtt.seulimacasafacil.com.br
MQTT_PORT=1883
MQTT_USER=paineluser
MQTT_PASS=Painel@2025!
MQTT_CLIENT_ID_PREFIX=tSecaPainel
MQTT_BASE_TOPIC=tSeca

# ============================= CONFIGURAÇÕES DE SEGURANÇA =============================
ALLOWED_ORIGINS=https://sua-vps.com,http://localhost:3030
CORS_ORIGIN=https://sua-vps.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================= CONFIGURAÇÕES DE LOG =============================
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# ============================= CONFIGURAÇÕES DE BANCO DE DADOS =============================
DATABASE_URL=mongodb://localhost:27017/tseca
DATABASE_TYPE=mongodb

# ============================= CONFIGURAÇÕES DE CACHE =============================
CACHE_TYPE=memory
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================= CONFIGURAÇÕES SSL/TLS =============================
SSL_KEY_PATH=/etc/letsencrypt/live/sua-vps.com/privkey.pem
SSL_CERT_PATH=/etc/letsencrypt/live/sua-vps.com/fullchain.pem

# ============================= CONFIGURAÇÕES DE MONITORAMENTO =============================
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_HEALTH_CHECK=true
HEALTH_CHECK_INTERVAL=30000
